<div id="content" class="clearfix" style="margin-top:20px">
    <section id="left">
        <div id="userStats" class="clearfix">
            <div class="pic">
                <a href="#"><img src=" @((ViewBag.userInfo as Tweetinvi.Models.IUser).UserDTO.ProfileImageUrl) " width="150" height="150" /></a>
            </div>
            <div class="data">
                <h1>@((ViewBag.userInfo as Tweetinvi.Models.IUser).UserDTO.Name)</h1>
                <h3>@((ViewBag.userInfo as Tweetinvi.Models.IUser).UserDTO.Location)</h3>
                <h4><a href="@((ViewBag.userInfo as Tweetinvi.Models.IUser).UserDTO.Url)">@((ViewBag.userInfo as Tweetinvi.Models.IUser).UserDTO.Url)</a></h4>
                <div class="sep"></div>
                <ul class="numbers clearfix">
                    <li>Followers: <strong>@((ViewBag.userInfo as Tweetinvi.Models.IUser).FollowersCount)</strong></li>
                    <li>Friends: <strong>@((ViewBag.userInfo as Tweetinvi.Models.IUser).FriendsCount)</strong></li>
                    <li class="nobrdr">Statuses: <strong>@((ViewBag.userInfo as Tweetinvi.Models.IUser).StatusesCount)</strong></li>
                </ul>
            </div>
        </div>
    </section>
</div>

